<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Transparent background color -->
        </shape>
    </item>

    <item android:left="0dp" android:right="0dp" android:top="4dp" android:bottom="4dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#ADD8E6" /> <!-- Background color -->
            <corners android:radius="12dp" /> <!-- Border radius -->
        </shape>
    </item>
    <item android:right="2dp" android:left="8dp" android:top="6dp" android:bottom="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#F5FFFF" /> <!-- Border color -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>
