<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Transparent background color -->
        </shape>
    </item>

    <!-- Bottom half of the border -->
    <item android:right="0dp" android:left="0dp" android:top="10dp" android:bottom="4dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#ADD8E6" /> <!-- Border color -->
            <corners android:radius="8dp" /> <!-- Border radius -->
        </shape>
    </item>

    <item android:right="0dp" android:left="0dp" android:top="4dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#F5FFFF" /> <!-- Background color -->
            <corners android:radius="12dp" />
        </shape>
    </item>

</layer-list>
